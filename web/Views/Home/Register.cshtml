@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class='row'>
    <div class='col-md-12 text-center'>
        <h2>Lowest Price Found: <strong>Â£9.99</strong></h2>
        <br />
    </div>
</div>

<div class='row'>
    <div class='col-md-12 text-center'>
        <img src='/images/facebook.jpg' style='max-height: 40px'>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form role="form" asp-action='Register'>
            <div class="form-group">
                <label for="first-name">First Name</label>
                <input type="text" class="form-control" id="firstNameInput" placeholder="John" name="firstNameInput">
                <label for="surname">Last Name</label>
                <input type="text" class="form-control" id="lastNameInput" placeholder="Doe" name="lastNameInput">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" id="emailInput" name="emailInput">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="passwordInput" name="passwordInput">
                <label for="password-confirm">Confirm Password</label>
                <input type="password" class="form-control" id="passwordConfirmInput" name="passwordInput">
            </div>
            <div class="form-group">
                <label for="homeowner-check">Are you a homeowner?<input type="checkbox" class="form-control" id="homeownerCheck"></label>
                <br>
                <label for="street-address">Street Address</label>
                <input type="text" class="form-control" id="streetAddressInput">
                <label for="city">Town/City</label>
                <input type="text" class="form-control" id="cityInput">
                <label for="postcode">Postcode</label>
                <input type="text" class="form-control" id="postcodeInput">
            </div>
            <button type="submit" class="btn btn-default">Continue</button>
        </form>
    </div>
</div>